<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ section.settings.card_image | image_url: width: 500 }}" alt="{{section.settings.card_image.alt}}">
  <div class="card-body">
    <h5 class="card-title" data-live-text-setting="section.feature-columns.block.feature-clumns-0.title/escape">{{section.settings.card-title}}</h5>
    <p class="card-text" data-live-text-setting="section.feature-columns.block.feature-clumns-0.title/escape">{{section.settings.home_welcome_message}}</p>
    <a href="{{section.settings.button_link}}" class="btn btn-primary">{{section.settings.btn_label}}</a>
  </div>
</div>
<style>
  .card .btn {
    background-color : {{ section.settings.btn-color}}
  }
</style>  


{% schema %}
{
    "name": "Bootstrap Card",
    "tag": "section",
    "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },
		{
  		"type": "text",
  		"id": "card-title",
  		"label": "Heading",
 		 "default": "Quick links"
		},
{
  "type": "textarea",
  "id": "home_welcome_message",
  "label": "Welcome message",
  "default": "Welcome to my shop!"
},
{
  		"type": "text",
  		"id": "btn_label",
  		"label": "Button text"
		},
{
  "type": "url",
  "id": "button_link",
  "label": "Button link"
},

        {
            "type": "color",
            "id": "btn-color",
            "label": "Button Color",
            "default": "#3b4d28"
        }
    ],
    "presets": [{
        "name": "Bootstrap Card",
        "category": "Custom"
    }]
}
{% endschema %}

